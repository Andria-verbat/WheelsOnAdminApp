<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp"
    android:clickable="true"
    android:id="@+id/parentCardView"
    app:rippleColor="@color/ripple_white"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_margin="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/cardImage"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/avatar_square"
                android:background="@color/white"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cardImage"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="2dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/button_dark"
                android:textSize="16sp"
                android:id="@+id/textName"
                android:fontFamily="@font/century_gothic"
                android:text="Driver Name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/textMobile"
                android:fontFamily="@font/century_gothic"
                android:textColor="@color/grey_dark"
                android:visibility="gone"
                android:text="Location:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/textLicenceNo"
                android:fontFamily="@font/century_gothic"
                android:textColor="@color/grey_dark"
                android:text="Licence No:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/licenceValidity"
                android:fontFamily="@font/century_gothic"
                android:textColor="@color/grey_dark"
                android:text="Valid Till:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/textCategory"
                android:fontFamily="@font/century_gothic"
                android:textColor="@color/grey_dark"
                android:text="Category:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/textExperience"
                android:fontFamily="@font/century_gothic"
                android:textColor="@color/grey_dark"
                android:text="Experience:"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View"
            android:id="@+id/textView"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:fontFamily="@font/century_gothic"
            android:paddingBottom="2dp"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_bg_curved_blue"/>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>