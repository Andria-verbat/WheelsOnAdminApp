<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/button_bg_curved_blue"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textServiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Name"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/etType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgExpense"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/century_gothic"
        android:hint="Enter the Amount"
        android:inputType="numberDecimal"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etRemarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etType"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/century_gothic"
        android:hint="Remarks"
        android:inputType="text"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imgExpense"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/textServiceName"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_baseline_add_a_photo_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/etRemarks"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:textColor="@color/button_dark"
            android:layout_margin="20dp"
            android:text="Cancel"
            android:layout_weight="1"
            android:id="@+id/btCancel"
            android:textSize="16sp"
            android:fontFamily="@font/century_gothic_bold"
            android:textAllCaps="false"
            android:background="@drawable/button_bg_curved"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:textColor="@color/button_dark"
            android:layout_margin="20dp"
            android:text="Add"
            android:layout_weight="1"
            android:id="@+id/btAdd"
            android:textSize="16sp"
            android:fontFamily="@font/century_gothic_bold"
            android:textAllCaps="false"
            android:background="@drawable/button_bg_curved"/>
    </LinearLayout>



</RelativeLayout>