<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.LoginFragment"
    android:background="@drawable/bg_screen">

    <ImageView
        android:id="@+id/imgApplogo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_blue"/>


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/imgApplogo">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginBottom="10dp">

           <FrameLayout
               android:layout_width="wrap_content"
               android:layout_gravity="center"
               android:layout_marginBottom="10dp"
               android:layout_height="wrap_content">
               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_width="110dp"
                   android:layout_height="110dp"
                   app:civ_border_color="@color/white"
                   app:civ_border_width="2dp"
                   android:id="@+id/imgProfile"
                   android:src="@drawable/avatar"/>
               <ImageButton
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_marginEnd="5dp"
                   android:src="@drawable/ic_baseline_add_24"
                   android:tint="@color/button_dark"
                   android:id="@+id/imgAdd"
                   android:layout_gravity="right|bottom"
                   android:background="@drawable/circle_bg_white"/>
           </FrameLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="MOBILE NUMBER"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               app:hintTextColor="@color/white">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/etMobileNumber"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/century_gothic"
                   android:textColorHighlight="@color/white"
                   android:background="@color/transparent"
                   android:textColor="@color/white"/>

           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="LAND LINE"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               app:hintTextColor="@color/white">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/etLandline"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:inputType="phone"
                   android:fontFamily="@font/century_gothic"
                   android:textColorHighlight="@color/white"
                   android:background="@color/transparent"
                   android:textColor="@color/white"/>

           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="TRAVELS NAME"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               app:hintTextColor="@color/white">

               <com.google.android.material.textfield.TextInputEditText
                   android:layout_width="match_parent"
                   android:id="@+id/etTravelName"
                   android:layout_height="wrap_content"
                   android:textColorHighlight="@color/white"
                   android:background="@color/transparent"
                   android:fontFamily="@font/century_gothic"
                   android:textColor="@color/white"/>

           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="OWNER NAME"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               app:hintTextColor="@color/white">

               <com.google.android.material.textfield.TextInputEditText
                   android:layout_width="match_parent"
                   android:id="@+id/etOwnerName"
                   android:layout_height="wrap_content"
                   android:textColorHighlight="@color/white"
                   android:background="@color/transparent"
                   android:fontFamily="@font/century_gothic"
                   android:textColor="@color/white"/>

           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="ADDRESS"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               app:hintTextColor="@color/white">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/etAddress"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColorHighlight="@color/white"
                   android:fontFamily="@font/century_gothic"
                   android:background="@color/transparent"
                   android:textColor="@color/white"/>

           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="NO OF VEHICLES"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               app:hintTextColor="@color/white">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/etVehicleNos"
                   android:inputType="number"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColorHighlight="@color/white"
                   android:fontFamily="@font/century_gothic"
                   android:background="@color/transparent"
                   android:textColor="@color/white"/>

           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="USERNAME (EMAIL)"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               app:hintTextColor="@color/white">

               <com.google.android.material.textfield.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:inputType="textEmailAddress"
                   android:id="@+id/etEmail"
                   android:textColorHighlight="@color/white"
                   android:fontFamily="@font/century_gothic"
                   android:background="@color/transparent"
                   android:textColor="@color/white"/>

           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="PASSWORD"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               app:hintTextColor="@color/white"
               app:passwordToggleEnabled="true">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/etPassword"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColorHighlight="@color/white"
                   android:background="@color/transparent"
                   android:fontFamily="@font/century_gothic"
                   android:inputType="textPassword"
                   android:textColor="@color/white"/>

           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="CONFIRM PASSWORD"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               app:hintTextColor="@color/white"
               app:passwordToggleEnabled="true">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/etConfirmPassword"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColorHighlight="@color/white"
                   android:background="@color/transparent"
                   android:fontFamily="@font/century_gothic"
                   android:inputType="textPassword"
                   android:textColor="@color/white"/>

           </com.google.android.material.textfield.TextInputLayout>



           <Button
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:layout_marginTop="20dp"
               android:layout_marginStart="20dp"
               android:layout_marginBottom="10dp"
               android:layout_marginEnd="20dp"
               android:textColor="@color/blue_dark"
               app:backgroundTint="@null"
               android:fontFamily="@font/century_gothic_bold"
               android:id="@+id/btUpdate"
               android:text="UPDATE &amp; CONTINUE"
               android:background="@drawable/button_bg_curved"/>


           <ImageView
               android:layout_width="50dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:src="@drawable/dot_3" />

       </LinearLayout>
   </ScrollView>

</RelativeLayout>