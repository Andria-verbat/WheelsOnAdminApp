<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentCardView"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    android:clickable="true"
    android:focusable="true"
    app:rippleColor="@color/ripple_white"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/car_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgProfile"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="2dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/button_dark"
                android:textSize="16sp"
                android:fontFamily="@font/century_gothic"
                android:id="@+id/vehicleName"
                android:text="Vehicle Name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/brand"
                android:fontFamily="@font/century_gothic"
                android:textColor="@color/grey_dark"
                android:text="Model:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/vehicleNo"
                android:fontFamily="@font/century_gothic"
                android:textColor="@color/grey_dark"
                android:text="Vehicle No:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/textInsurance"
                android:fontFamily="@font/century_gothic"
                android:textColor="@color/grey_dark"
                android:text="Insurance Till:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/century_gothic"
                android:id="@+id/textPollution"
                android:textColor="@color/grey_dark"
                android:text="Pollution till:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/century_gothic"
                android:id="@+id/textSeats"
                android:textColor="@color/grey_dark"
                android:text="Seats:"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/century_gothic"
                android:id="@+id/textSpeedReading"
                android:textColor="@color/grey_dark"
                android:text="Speedometer Reading:"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:background="@drawable/button_bg_curved_blue"
                android:fontFamily="@font/century_gothic"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingBottom="2dp"
                android:text="View"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textViewInactive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_curved_blue"
                android:fontFamily="@font/century_gothic"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingBottom="2dp"
                android:text="Inactive"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>