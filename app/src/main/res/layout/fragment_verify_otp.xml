<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.LoginFragment"
    android:background="@drawable/bg_screen">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_blue"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">



        <in.aabhasjindal.otptextview.OtpTextView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#ffffff"
            app:height="40dp"
            app:width="70dp"
            app:bar_margin_left="5dp"
            app:bar_margin_right="5dp"
            app:bar_active_color="@color/button_dark"
            app:bar_inactive_color="@color/button_dark"
            app:bar_enabled="true"
            app:bar_height="1dp"
            app:length="4"
            app:otp="1234"
            android:layout_gravity="center"
            app:otp_text_size="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/century_gothic"
            android:text="An OTP has been sent to 9876543210"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/century_gothic"
            android:text="Change Mobile Number?"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/blue_dark"
            app:backgroundTint="@null"
            android:text="VERIFY"
            android:fontFamily="@font/century_gothic_bold"
            android:id="@+id/btVerify"
            android:background="@drawable/button_bg_curved"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/century_gothic"
            android:text="You should be getting a text message shortly"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:text="00:00"
            android:fontFamily="@font/century_gothic"
            android:id="@+id/txtTimer"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/dot_2" />

    </LinearLayout>

</RelativeLayout>